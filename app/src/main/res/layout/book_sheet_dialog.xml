<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30sp"
    android:backgroundTint="@color/third_color"
    app:cardElevation="30sp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/title_book_your_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8sp"
            android:text="Book Your Slot"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/sv_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_book_your_slot"
            android:scrollbars="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slot1"
                    android:layout_width="150sp"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:background="@drawable/selected_background"
                    android:padding="2dp"
                    app:cardCornerRadius="16sp"
                    app:cardElevation="5sp">


                    <TextView
                        android:id="@+id/tv_slot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="8sp"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="@string/slot1"
                        android:textColor="#7A8089"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slot2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:layout_toEndOf="@+id/cv_slot1"
                    android:background="@color/black"
                    android:padding="2dp"
                    app:cardCornerRadius="16sp"
                    app:cardElevation="5sp"
                    app:cardUseCompatPadding="true">

                    <TextView

                        android:id="@+id/tv_slot2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="8sp"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="@string/slot2"
                        android:textColor="#7A8089"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slot3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="8sp"
                    android:layout_marginBottom="16sp"
                    android:layout_toEndOf="@+id/cv_slot2"
                    android:background="@color/black"
                    android:padding="2dp"
                    app:cardCornerRadius="16sp"
                    app:cardElevation="5sp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/tv_slot3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="8sp"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="@string/slot3"
                        android:textColor="#7A8089"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slot4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6sp"
                    app:cardElevation="5sp"
                    android:layout_toEndOf="@+id/cv_slot3"
                    android:background="@color/black"
                    android:padding="2dp"
                    app:cardCornerRadius="16sp">

                    <TextView
                        android:id="@+id/tv_slot4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="8sp"
                        android:elevation="5sp"
                        android:gravity="center"
                        android:padding="12sp"
                        android:text="@string/slot4"
                        android:textColor="#7A8089"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sv_slot"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circular_button_background"
                android:elevation="20sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Proceed to pay"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>